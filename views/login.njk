{% extends './template.njk' %}
{% block body %}
{# Adapted from https://bootsnipp.com/snippets/VgBP3 #}
<div class="d-flex flex-row align-items-center" style="min-height: calc(100vh - 76px);">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-12 text-center" style="max-width: 400px;">
                <h1>Login</h1>
                <div class="alert alert-warning" id="login-invalid" style="display: none;">Invalid Credentials Provided</div>
                <form>
                    <div class="form-group">
                        <input type="text" class="form-control" id="username" placeholder="Username">
                    </div>
                    <div class="form-group">
                        <input type="password" class="form-control" id="password" placeholder="Password">
                    </div>
                    <button type="button" class="btn btn-primary btn-block" id="login">Login</button>
                </form>
            </div>
        </div>
    </div>
</div>
<script src="/js/login.js"></script>
{% endblock %}